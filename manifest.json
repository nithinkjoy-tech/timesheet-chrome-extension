{
  "manifest_version": 3,
  "name": "Timesheet Chrome Extension",
  "version": "1.0",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "identity",
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://cloverbay.keka.com/*",
    "https://*.atlassian.net/*",
    "https://orbitone-auth.cloverbaytechnologies.com/*",
    "https://www.orbitone.cloverbaytechnologies.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://cloverbay.keka.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
